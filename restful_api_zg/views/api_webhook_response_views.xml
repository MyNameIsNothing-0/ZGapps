<odoo>
     <record id="odoo_api_webhook_response_form_view" model="ir.ui.view">
        <field name="name">odoo.api.webhook.response.form.view</field>
        <field name="model">odoo.api.webhook.response</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="response_data"/>
                        </group>
                            <group>
                            <field name="header_data"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_odoo_api_webhook_response_kanban" model="ir.ui.view">
            <field name="name">odoo.api.webhook.response.kanban</field>
            <field name="model">odoo.api.webhook.response</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1" records_draggable="0" >
                    <field name="name"/>
                    <field name="header_data"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class=" oe_kanban_global_click">
                                <div class="row oe_kanban_content">
                                    <div class="col-12">
                                        <strong><t t-esc="record.name.value"/></strong>
                                    </div>


                                    



                                </div>
                                <!-- <field name="project_ids" widget="many2many_tags" options="{'color_field': 'color'}"/> -->
                                <t t-if="record.header_data.value">
                                    <hr class="mt8 mb8"/>
                                    <t t-esc="record.header_data.value"/>
                                </t>
                               
                            </div>
                            
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    <record id="view_webhook_api_response_search" model="ir.ui.view">
        <field name="name">odoo.api.webhook.response.search</field>
        <field name="model">odoo.api.webhook.response</field>
        <field name="arch" type="xml">
            <search string="Response Data">
                <field name="header_data"/>
                <field name="response_data"/>
                <field name="name" />
               
                <group expand="0" string="Group By">
                    <filter
                        name="group_by_webhook_id"
                        string="Webhook URL"
                        context="{'group_by': 'webhook_id'}"
                    />
                    
                </group>
            </search>
        </field>
    </record>
    <record id="action_odoo_api_webhook_response" model="ir.actions.act_window">
        <field name="name">Webhook Response</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoo.api.webhook.response</field>
        <field name="view_mode">kanban,form</field>
        <field name="search_view_id" ref="view_webhook_api_response_search" />
        <field name="context">{'search_default_group_by_webhook_id': 1}</field>
    </record>
    
    <menuitem name="Webhooks Response" parent="menu_main_odoo_api_webhook" id="menu_main_odoo_api_webhook_response" sequence="3" action="action_odoo_api_webhook_response"/>


</odoo>