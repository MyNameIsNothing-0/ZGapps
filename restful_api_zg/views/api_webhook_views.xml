<odoo>
    <record id="odoo_api_webhook_form_view" model="ir.ui.view">
        <field name="name">odoo.api.webhook.form.view</field>
        <field name="model">odoo.api.webhook</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="webhook_url" invisible="1"/>
                    <group name="webhook_url" attrs="{'invisible': [('webhook_url', 'in', [False,''])]}">
                        <field name="full_webhook_url" widget="CopyClipboardChar" options="{'string': 'Copy Link'}"/>
                    </group>
                    <group>
                        <group>
                            <field name="name" string="Webhook Name" />
                            <separator string="Webhook URL" colspan="2"/>
                            <label for="webhook_url" />
                            <div class="d-flex flex-row">
                                <span>/webhook/z3/</span>
                                <field name="webhook_url" class="ms-1"/>
                            </div>
                            <separator colspan="2"/>
                           
                            <field name="color" widget="color" />
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Response data" >
                        <field name="webhook_response_ids" mode="kanban" >
                            <kanban class="o_kanban_mobile" sample="1">
                                <field name="name"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_global_click">
                                            <div class="row">
                                                <div class="col-12">
                                                    <strong><t t-esc="record.name.value"/></strong>
                                                </div>
                                            </div>
                                        
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                            <form>
                                <sheet>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="response_data"/>
                                        </group>
                                         <group>
                                            <field name="header_data"/>
                                        </group>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_odoo_api_webhook_tree" model="ir.ui.view">
        <field name="name">odoo.api.webhook.tree.view</field>
        <field name="model">odoo.api.webhook</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="webhook_url"/>
            </tree>
        </field>
    </record>
    <record id="view_odoo_api_webhook_kanban" model="ir.ui.view">
            <field name="name">odoo.api.webhook.kanban</field>
            <field name="model">odoo.api.webhook</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="name"/>
                    <field name="color"/>
                    <field name="webhook_response_ids"/>
                    <field name="response_count"/>
                    <field name="description"/>
                    <field name="sequence" widget="handle"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                                <div class="row oe_kanban_content">
                                    <div class="col-12">
                                        <strong><t t-esc="record.name.value"/></strong>
                                    </div>


                                    



                                </div>
                                <!-- <field name="project_ids" widget="many2many_tags" options="{'color_field': 'color'}"/> -->
                                <t t-if="record.description.value">
                                    <hr class="mt8 mb8"/>
                                    <t t-esc="record.description.value"/>
                                </t>
                                <br/>
                                 <strong><t t-esc="record.response_count.value"/> Responses</strong>
                               
                            </div>
                            
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    <record id="action_odoo_api_webhook" model="ir.actions.act_window">
        <field name="name">Webhook Menu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoo.api.webhook</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    
    <menuitem name="Webhooks" id="menu_main_odoo_api_webhook_main" sequence="3" />
    <menuitem name="Webhooks" id="menu_main_odoo_api_webhook" parent="menu_main_odoo_api_webhook_main" sequence="3" />
    <menuitem name="Webhooks" parent="menu_main_odoo_api_webhook" id="menu_main_odoo_api_webhook_1" sequence="3" action="action_odoo_api_webhook"/>
<!-- ?***************************************************** -->

</odoo>