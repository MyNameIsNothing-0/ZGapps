<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="user_navbar_odooitnow" inherit_id="web.layout">
    <xpath expr="//body" position="inside">

        <t t-set="website_preloader_enable" t-value="request.env['ir.config_parameter'].sudo().get_param('website_preloader_zg.website_preloader_enable')" />
        <t t-if="website_preloader_enable" >
             <t t-set="website_preloader_bg_color" t-value="str(request.env['ir.config_parameter'].sudo().get_param('website_preloader_zg.website_preloader_bg_color'))" />
            <t t-set="website_preloader_animation" t-value="str(request.env['ir.config_parameter'].sudo().get_param('website_preloader_zg.website_preloader_animation'))" />
            <div id="website_pre_loading" t-attf-style="background-color:{{website_preloader_bg_color}}c8;" >
                <!-- Loader HTML structure -->
                <div class="wp-loader-container">
                    <!-- <div class="loader_three"></div> -->
                    <!-- <div class="loader_ring"></div> -->
                    <!-- <div class="loader_timer_load"></div> -->
                    <!-- <div class="loader_tea_cup_load"></div> -->
                    <!-- <div class="loader_clock_load"></div> -->
                    <!-- <div class="loader_image_logo_spinner"></div> -->
                    <!-- <div class="loader_block_move_spinner"></div> -->
                    <div t-attf-class="{{website_preloader_animation}}"></div>
                    <!-- <div class="fade_ring_loader"></div> -->
                </div>

                <!-- Background image for the loader -->
                <t t-set="website_preloader_image" t-value="'data:image/*;base64,'+str(request.env['ir.config_parameter'].sudo().get_param('website_preloader_zg.website_preloader_image'))" />
                <!-- <t t-set="website_preloader_color" t-value="blue" /> -->
                <!-- Background image for the content -->
                <div id="preloader_center_image" t-attf-style="background-image: url('#{website_preloader_image}'); background-size: cover;"></div>
            </div>
            <!-- <link href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" rel="stylesheet"/> -->
            <!-- Add any additional CSS or JS files here -->
           <t t-set="website_preloader_color" t-value="str(request.env['ir.config_parameter'].sudo().get_param('website_preloader_zg.website_preloader_color'))" />
            <t t-set="website_preloader_colondaryr_secondary" t-value="str(website_preloader_color)+'c7'" />
            <style>
               
                :root {
                    --box-preloader-color: <t t-esc="website_preloader_color" />; /* Default color, you can change it here */
                    --box-preloader-color-secondary:  <t t-esc="website_preloader_colondaryr_secondary" />; /* Default color, you can change it here */
                }
                
                
            </style>
            <script type="text/javascript">
                // Hide the loader after 2 seconds
                document.addEventListener("DOMContentLoaded", function() {
                    setTimeout(function () {
                        var loadingElement = document.getElementById('website_pre_loading');
                        if (loadingElement) {
                            loadingElement.style.display = 'none'; // Hide the loading element
                        }
                    }, 2000);
                });
            </script>
        
        </t>
    </xpath>
</template>


 
 </odoo>